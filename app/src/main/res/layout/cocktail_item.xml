<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <ImageView
        android:id="@+id/strDrinkThumb_cocktail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/cocktail_image"
        android:src="@drawable/placeholder"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/strDrink_cocktail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/strDrinkThumb_cocktail"
        app:layout_constraintTop_toTopOf="@+id/strDrinkThumb_cocktail"
        app:layout_constraintBottom_toBottomOf="@+id/strDrinkThumb_cocktail" />

    <ImageView
        android:id="@+id/alcohol_tag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/alcohol"
        app:layout_constraintEnd_toEndOf="@+id/strDrinkThumb_cocktail"
        app:layout_constraintTop_toTopOf="@+id/strDrinkThumb_cocktail"
        android:layout_marginEnd="-10dp"
        android:layout_marginTop="-10dp"
        android:contentDescription="@string/contain_alcohol" />

</androidx.constraintlayout.widget.ConstraintLayout>
